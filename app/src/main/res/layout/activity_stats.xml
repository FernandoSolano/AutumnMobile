<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatsActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <Button
            android:id="@+id/button_cognitive_impairment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickCognitiveImpairment"
            android:text="Deterioro cognitivo" />

        <Button
            android:id="@+id/button_depressive_disorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickDepressiveDisorder"
            android:text="Trastorno depresivo" />

        <Button
            android:id="@+id/button_emotional_dissorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickEmotionalDisorder"
            android:text="Trastorno emocional" />

        <Button
            android:id="@+id/button_mental_dissorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickMentalDisorder"
            android:text="Trastorno mental" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>